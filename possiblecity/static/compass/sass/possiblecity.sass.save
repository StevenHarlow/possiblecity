@import "base"

a
  color: $link-color
  &:hover
    color: $link-color-hover
  
a.button
  +sassy-button

button
  +sassy-button

body
  font-family: $base-font-family
  color: $text-color

h1
  +adjust-font-size-to($base-font-size * 3, $lines:2)
  color: $header-color
  
h2
  +adjust-font-size-to($base-font-size * 2, $lines:2)
  color: $header-color
  
h3
  +adjust-font-size-to($base-font-size * 1.5, $lines:2)
  color: $header-color

h4
  +adjust-font-size-to($base-font-size * 1.2, $lines:2)
  color: $header-color

p
  +trailer
  &:first-child
    +leader

blockquote
  font-style: italic
  +apply-side-rhythm-border(left)
  border-color: $gray-lightest
  border-width: 8px
  +leader
  +trailer

ol
  list-style: lower-alpha
  
div.status
  +adjust-font-size-to($base-font-size * 0.75)
  position: absolute
  top: 8em 
  left: 50%
  width: 16em
  text-align: center
  text-transform: uppercase
  font-weight: bold
  margin-left: -8em 
  background-color: rgba(255,255,255,0.5)
  color: #e8db00
  padding: .5em
  //padding-left: 2.5em
  //background-image: url("img/loader.gif")
  //background-repeat: no-repeat
  +border-radius(4px)
  
  
// layout
div.identity
  h1
    display: none
  a.logo
    img 
      width: 100%
      
footer.site-footer
  clear: both
  +container

body.blog

  header.site-header+container
    margin-top: 2em
    margin-bottom: 2em
  
  footer.site-footer
    +container
    clear: both
    +leading-border
    +leader
    +trailer
    text-align: right
    border-color: $gray-lightest

  nav.site-nav
    +pre(3) 
    +span-columns(9)
    ul
      +horizontal-list
      float: right
      li
        a
          +pill
          
  div.identity
    +span-columns(4,9)
    
  div.page-content
    +container

  article.entry
    +clearfix
    clear: both
    +trailer
    aside
      margin-top: .5em
      +span-columns(3, 12)
      text-align: right
      p.date
        background: $gray-lighter
        color: $white
        +border-radius(2px)
        +inline-block
        padding: 6px
        margin-top: 0
      p.author
        color: $gray-light
      ul.tags
        li
          background: $gray-lightest
          color: $white
          +border-radius(2px)
          +inline-block
          padding: 6px
          margin: 2px 0 2px 2px
          &:hover
            background: $gray
    h2
      font-weight: bold
      a
        color: $gray-dark
        font-weight: bold
        text-decoration: none
        &:hover
          color: $link-color
      
    section.entry-content
      +span-columns(9 omega,12)
  
  nav.entry-nav
    clear: both
    text-align: right
    a
      +pill
    

// lotxlot

body.map
  
  +border-box-sizing

  #map
    width: 100%
    height: 100%
 
  .leaflet-control-zoom
    left: 2em
    top: 4em
  
  header.site-header
    background-color: rgba(255,255,255,1.0)
    width: 100%
    padding: 1em 0
    position: absolute
    z-index: 1000
    nav.site-nav
      +container
      div.identity
        +span-columns(2)
        a.logo
          +border-radius(2px)
          +inline-block
          //padding: 6px
          //background-color: rgba(255,255,255,1.0)
      ul
        +horizontal-list
        float: right
        li
          a  
            +pill
            
  article.lot
    +container
    position: relative
    z-index: 1001
    section.details
      +span-columns(7)
      +border-radius(8px)
      +box-shadow()
      height: 20em
      padding: 1em
      margin-top: -23em
      background-color: rgba(255,255,255,0.7)
      span.label
        +adjust-font-size-to($base-font-size * 0.8)
        color: #555
        text-transform: uppercase
        +inline-block
        padding-right: 10px
        width: 100px
        text-align: right
        //+adjust-font-size-to($base-font-size * .75)
      span.data
        +adjust-font-size-to($base-font-size * 1.2)
        font-weight: bold
     
    

  

